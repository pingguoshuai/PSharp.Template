<%@ Import Namespace="System.Collections.Generic" %>
<%@ Import Namespace="System.Linq" %>
<%@ Import Namespace="System.Text" %>
<%@ Import Namespace="System.Text.RegularExpressions" %>
<%@ Import Namespace="SchemaMapper" %>

<%@ Property Name="Entity" Type="SchemaMapper.Entity"  %>
<%@ Property Name="Namespace" Type="System.String"  %>
<%-- Safe类名 --%>
<% string SafeClassName = Entity.ClassName.ToSafeName(); %>
<%-- 描述 --%>
<% string Description = Entity.Description; %>
using Util.Domains.Repositories;
using Util.Domains.Trees;
using <%= Entity.GetNamespace(Namespace,"Domains","Models") %>;

<%
if( Entity.IsTreeEntity() ){ %>
namespace <%= Entity.GetNamespace(Namespace,"Domains","Repositories") %> {
    /// <summary>
    /// <%= Description %>仓储
    /// </summary>
    public interface I<%= SafeClassName %>Repository : ITreeRepository<<%= SafeClassName %><%= Entity.GetKeyTypeNoContainsGuid() %>> {
    }
}
<% return;}%>
namespace <%= Entity.GetNamespace(Namespace,"Domains","Repositories") %> {
    /// <summary>
    /// <%= Description %>仓储
    /// </summary>
    public interface I<%= SafeClassName %>Repository : IRepository<<%= SafeClassName %><%= Entity.GetKeyTypeNoContainsGuid() %>> {
    }
}